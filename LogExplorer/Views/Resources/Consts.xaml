<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
	
	<system:Double x:Key="NameWidth">350</system:Double>
	<system:Double x:Key="ResultWidth">100</system:Double>
	<system:Double x:Key="StartTimeWidth">150</system:Double>
	<system:Double x:Key="DurationWidth">100</system:Double>
	<system:Double x:Key="CommandsWidth">200</system:Double>

	<!--NameGrid + CounterGrid = NameWidth-->
	<GridLength x:Key="NameGrid">250</GridLength>
	<GridLength x:Key="CounterGrid">100</GridLength>
	<GridLength x:Key="ResultGrid">100</GridLength>
	<GridLength x:Key="StartTimeGrid">150</GridLength>
	<GridLength x:Key="DurationGrid">100</GridLength>
	<GridLength x:Key="CommandsGrid">200</GridLength>

	<Brush x:Key="IconColor">White</Brush>

</ResourceDictionary>